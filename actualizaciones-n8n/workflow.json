      "id": "NODE_ID_PLACEHOLDER_3",
      "name": "If"
    },
    {
      "parameters": {
        "sendTo": "{{$env.NOTIFY_EMAIL}}",
        "subject": "Nueva versión n8n!",
        "message": "=La versión de n8n estable se ha actualizado a  {{ $json.tag_name }}. Tenlo en cuenta para tus siguientes proyectos. ",
        "options": {
          "appendAttribution": false
        }
      },
      "type": "n8n-nodes-base.gmail",
      "typeVersion": 2.1,
      "position": [
        320,
        0
      ],
      "id": "NODE_ID_PLACEHOLDER_4",
