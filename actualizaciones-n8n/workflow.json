          "conditions": [
            {
              "id": "COND_ID_PLACEHOLDER",
              "leftValue": "={{ $json.tag_name }}",
              "rightValue": "=n8n@{{ $('Execute Command').item.json.stdout }}",
              "operator": {
                "type": "string",
                "operation": "equals"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "type": "n8n-nodes-base.if",
