# ============================================
# N8N WEBHOOK CONFIGURATION
# ============================================
# URL completa del webhook de n8n (producción)
WEBHOOK_URL=https://your-n8n-domain.com/webhook/contact-form

# Token secreto para autenticación del webhook
# Generar con: openssl rand -hex 32
WEBHOOK_SECRET_TOKEN=your-secret-token-here

# Path del webhook (sin dominio)
WEBHOOK_PATH=contact-form

# ============================================
# POSTGRESQL DATABASE
# ============================================
DB_HOST=your-database-host.com
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_SSL=true

# Nombre de la tabla de leads
DB_TABLE_LEADS=processia_leads

# ============================================
# SMTP EMAIL CONFIGURATION
# ============================================
# Zoho Mail SMTP
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_SECURE=false
SMTP_USER=contact@yourdomain.com
SMTP_PASSWORD=your-smtp-password-or-app-password

# Emails de destino
EMAIL_NOTIFICATIONS_TO=notifications@yourdomain.com
EMAIL_FROM_ADDRESS=contact@yourdomain.com
EMAIL_FROM_NAME=Your Company Name

# ============================================
# CORS CONFIGURATION
# ============================================
# Dominio permitido para CORS (tu sitio web)
ALLOWED_ORIGIN=https://your-website.com

# ============================================
# LEAD SCORING CONFIGURATION
# ============================================
# Puntos para el lead scoring
SCORE_HAS_PHONE=30
SCORE_HAS_COMPANY=40
SCORE_LONG_MESSAGE=30

# Umbrales de calidad
THRESHOLD_HOT=70
THRESHOLD_WARM=40

# ============================================
# N8N CONFIGURATION
# ============================================
# ID de tu instancia n8n (obtener de Settings)
N8N_INSTANCE_ID=your-n8n-instance-id
