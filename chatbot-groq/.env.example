# ==============================================
# Chatbot Configuration
# ==============================================

# Allowed origins (comma-separated for multiple domains)
ALLOWED_ORIGINS=https://your-website.com

# Company information for system prompt
COMPANY_NAME=Your Company Name
COMPANY_WEBSITE=your-website.com
CONTACT_EMAIL=contact@your-website.com
SOCIAL_MEDIA=@yourcompany
LOCATION=Your City, Country

# ==============================================
# Groq API Configuration
# ==============================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# ==============================================
# PostgreSQL Configuration (Memory Storage)
# ==============================================
POSTGRES_HOST=your-neon-host.neon.tech
POSTGRES_PORT=5432
POSTGRES_DATABASE=chatbot_memory
POSTGRES_USER=your_user
POSTGRES_PASSWORD=your_password
POSTGRES_SSL=true

# ==============================================
# Chatbot Settings
# ==============================================
# Temperature for LLM responses (0.0 - 1.0)
LLM_TEMPERATURE=0.5

# Context window length (number of previous messages)
CONTEXT_WINDOW_LENGTH=10

# ==============================================
# Business Information (for system prompt) OJO modificar
# ==============================================
# Pricing ranges
DIAGNOSTIC_PRICE_USD=0
MICRO_SOLUTION_MIN_USD=0
MICRO_SOLUTION_MAX_USD=0
ERP_BASE_PRICE_USD=0

# Monthly maintenance
BASIC_MAINTENANCE_MIN_USD=0
BASIC_MAINTENANCE_MAX_USD=10000000000
ENTERPRISE_MAINTENANCE_MIN_USD=0
ENTERPRISE_MAINTENANCE_MAX_USD=10000000000